{
  "expo": {
    "name": "LocalLink",
    "slug": "locallink",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "resizeMode": "contain"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.locallink"
    },
    "android": {
      "package": "com.yourname.locallink",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "dec7a035-bf8a-40a1-a5d9-f194d08a90ba"
      }
    }
  }
}
